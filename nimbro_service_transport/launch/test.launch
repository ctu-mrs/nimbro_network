<launch>

  <!-- Service server -->
  <node name="service_server" pkg="nimbro_service_transport" type="service_server" output="screen">
    <param name="port" value="6556" />
  </node>

  <!-- Service client -->
  <node name="service_client" pkg="nimbro_service_transport" type="service_client" output="screen">
    <param name="port" value="6556" />
    <rosparam>
      network:
        # names of the drones have to match hostnames described in /etc/hosts
        drone_names: [uav1, uav2]

      services:
        - name: "/*/control_manager/motors"
          type: std_srvs/SetBool
        - name: "/*/uav_manager/takeoff"
          type: std_srvs/Trigger

    </rosparam>
  </node>
</launch>
